<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="product_supplierinfo_form_view" model="ir.ui.view">
            <field name="name">product.supplierinfo.form.view</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id" ref="product.product_supplierinfo_form_view"/>
            <field name="arch" type="xml">
                <field name="product_name" position="after">
                    <field name="supplier_company_id" invisible="1" />
                    <field
                        name="supplier_product_id"
                        domain="[('company_id', '=', supplier_company_id)]"
                        attrs="{'invisible': [('supplier_company_id', '=', False)]}"
                    />
                    <field
                        name="supplier_product_code"
                        attrs="{'invisible': [('supplier_company_id', '=', False)]}"
                    />
                </field>
                <field name="product_name" position="attributes">
                    <attribute name="attrs">{'invisible': [('supplier_company_id', '!=', False)]}</attribute>
                </field>
                <field name="product_code" position="attributes">
                    <attribute name="attrs">{'invisible': [('supplier_company_id', '!=', False)]}</attribute>
                </field>
            </field>
        </record>

        <record id="product_form_view" model="ir.ui.view">
            <field name="name">product.form.view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="stock_available_immediately.view_normal_stock_active_qty_form"/>
            <field name="arch" type="xml">
                <field name="immediately_usable_qty" position="after">
                    <newline/>
                    <field name="suppliers_immediately_usable_qty" />
                </field>
                <field name="standard_price" position="after">
                    <field name="manual_cost_price" attrs="{'invisible': [('has_same_erp_supplier', '=', True)]}" />
                    <field name="has_same_erp_supplier" invisible="1" />
                </field>
                <field name="standard_price" position="attributes">
                    <attribute name="attrs">{'invisible': [('has_same_erp_supplier', '=', False)]}</attribute>
                </field>
            </field>
        </record>
    </data>
</openerp>

